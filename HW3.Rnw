\subsection*{Fig 1: Distribution of All MPG Ratings}
<<tidy=TRUE, fig.width=16, fig.height=8, out.width="8in", out.height="4in">>==
  plotdat = melt(mpg, measure.vars=c("hwy", "cty"), id.vars ="id")
  a = ggplot(data=mpg, aes(y=cty, x=hwy))+xlim(7,50)+ylim(7,50)+geom_point()+geom_smooth(method = lm)+xlab("City Mileage")+ylab("Highway Mileage\n")+ggtitle("Highway Mileage Corresponds well with City Mileage\n")
  b = ggplot(plotdat)+geom_histogram(aes(x=value, fill=variable), position = "identity", alpha = .5)+ggtitle("Distribution of MPG Ratings for All Vehicles\n")+xlab("MPG")+ylab("Count\n")+scale_fill_discrete(name="MPG Conditions")
  c = ggplot(plotdat)+geom_boxplot(aes(x= variable, y=value))+xlab("MPG Conditions")+ylab("MPG\n")+ggtitle("Highway Mileage was Higher on Average than City Mileage\n")
  d = ggplot(plotdat)+geom_histogram(aes(x=value))+facet_grid(.~variable)+ggtitle("Distributions of Mileage Vary (Bimodal & Unimodal)\n")+xlab("MPG")+ylab("Count\n")
  grid.newpage()
  pushViewport(viewport(layout=grid.layout(2, 2)))
  print(a, vp = viewport(layout.pos.row=1, layout.pos.col=1))
  print(b, vp = viewport(layout.pos.row=1, layout.pos.col=2))
  print(c, vp = viewport(layout.pos.row=2, layout.pos.col=1))
  print(d, vp = viewport(layout.pos.row=2, layout.pos.col=2))
@
